<!DOCTYPE html>
<html>
    <head>
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <style>
            
                #playlists{
                    margin: auto;
                    width: 50%;
                    text-align: center;
                    margin-top: 10vh;
                 }
                li{
                    list-style: none;
                }
                #title{
                    position: fixed;
                    top: 0;
                    right: 0;
                    margin: auto;
                    width: 100%;
                    text-align: center;
                    color: white;
                    height: 10vh;
                    padding-top: 1%;
                }
                
                body{
                    background-color: black;
                }
                button{
                    margin: 5px;
                    width: 50%;
                }
        </style>
            
    </head>
  <body>
    <script>
    function playlistSelected(id){
    $.ajax({
        type: 'GET', 
        url: "http://localhost:3000/playlist/" + id 
    });
    location.href='http://localhost:3000/loading/'
    
    }
    </script>
    <div id="title" class="bg-success">
       <h1>Your Top 50 Playlists</h1> 
    </div>
    
            <div id="playlists">
            <% playlistInfo.forEach(function(playlist){ %>
                <li id="<%= playlist['id'] %>" onclick="playlistSelected(id)"><button type="button" class="btn btn-success"><%= playlist["name"] %></button></li>
            <% })   %>
            </div>
            <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
              
  </body>
</html>

